<div id="comment_<%= @comment.id %>">
  <tr>
    <td>
      <%= link_to user_path(comment.user) do %>
        <%= attachment_image_tag(comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
        <%= comment.user.name %>
      <% end %>
    </td>
    <td>
      <%= comment.content %>
    </td>
    <td>
      <% if comment.user_id == current_user.id %>
        <%= link_to "Destroy", book_book_comment_path(comment.book_id, comment.id), method: :delete, remote: true, class: "btn btn-danger" %>
      <% end %>
    </td>
  </tr>
</div>

